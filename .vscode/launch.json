{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug content server ci test",
      "program": "./tests/intern.js",
      "args": ["--suites", "circle", "--groupsCount", "6", "--groupNum", "6", "--grep", "subscriptions - sign up, failed to subscribe due to expired CC"],
      "request": "launch",
      "cwd":"${workspaceFolder}/packages/fxa-content-server",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },

    {
      "type": "pm2-node",
      "request": "attach",
      "name": "Attach via PM2",
      "service": "${command:PickProcess}"
    },
    {
      "type": "firefox",
      "request": "attach",
      "name": "Attach to Firefox"
    },
    {
      "name": "Functional Tests",
      "type": "node",
      "protocol": "inspector",
      "env": {
        "DEBUG": "1"
      },
      "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
      "args": ["test","--config=${workspaceFolder}/packages/functional-tests/playwright.config.ts", "--project=local"],
      "autoAttachChildProcesses": true,
      "cwd":"${workspaceFolder}/packages/functional-tests",
      "request": "launch",
    },


  ]
}
